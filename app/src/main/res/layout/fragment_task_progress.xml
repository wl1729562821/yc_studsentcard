<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:progressbar = "http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="cc.manbu.schoolinfocommunication.fragments.TaskProgressFragment">

    <!-- TODO: Update blank fragment layout -->
    <cc.manbu.schoolinfocommunication.view.customer.RoundProgressBar
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pb_task_progress"
        android:layout_width="240dp"
        android:layout_height="240dp"
        progressbar:max="100"
        progressbar:roundColor="#D1D1D1"
        progressbar:roundWidth="12dp"
        progressbar:text_color="#FFCC00"
        progressbar:roundProgressColor="#8DE918"
        progressbar:textIsDisplayable="true"
        progressbar:text_size="24sp"/>

    <TextView
        android:id="@+id/id_tv"
        android:layout_above="@id/pb_task_progress"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_task"
        android:textColor="@color/login_bar"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/id_tvSteps"
        android:layout_above="@id/pb_task_progress"
        android:layout_toRightOf="@+id/id_tv"
        android:layout_toEndOf="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/green"
        android:text="@string/step"/>
    <TextView
        android:layout_above="@id/pb_task_progress"
        android:layout_toRightOf="@+id/id_tvSteps"
        android:layout_toEndOf="@+id/id_tvSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/login_bar"
        android:text="@string/step"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/pb_task_progress"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#FFCC00"
        android:textSize="22sp"
        android:text="@string/task_progress"/>
</RelativeLayout>
