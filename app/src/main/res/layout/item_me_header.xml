<?xml version="1.0" encoding="utf-8"?>
<cn.yc.base.view.custom.percent.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.yc.base.view.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/me_top_bg">

        <ImageView
            android:id="@+id/id_ivHead"
            app:layout_widthPercent="22%w"
            app:layout_heightPercent="22%w"
            android:layout_gravity="center"
            app:layout_marginTopPercent="14%w"
            android:src="@drawable/pic_head" />

        <TextView
            android:id="@+id/id_tvLoginName"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%w"
            android:textColor="@color/white"
            app:layout_marginTopPercent="1%w"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            />

    </cn.yc.base.view.custom.percent.PercentLinearLayout>

</cn.yc.base.view.custom.percent.PercentLinearLayout>