<?xml version="1.0" encoding="utf-8"?>
<cn.yc.base.view.custom.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nav_bg">
    <include
        android:id="@+id/header"
        layout="@layout/layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <cn.yc.base.view.custom.percent.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_marginTopPercent="17%w"
        android:background="@color/white">
        <cn.yc.base.view.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                app:layout_marginLeftPercent="4%w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_device_on"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/id_tvOnTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/login_bar"/>
            <TextView
                android:id="@+id/id_tvSetOnTime"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_marginRightPercent="4%w"
                android:background="@drawable/blue_button_selector"
                android:text="@string/text_set_new_time"/>
        </cn.yc.base.view.custom.percent.PercentLinearLayout>
        <cn.yc.base.view.custom.percent.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_device_off"
                android:textSize="16sp"
                app:layout_marginLeftPercent="4%w"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/id_tvOffTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/login_bar"/>
            <TextView
                android:id="@+id/id_tvSetOffTime"
                android:layout_width="80dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textSize="12sp"
                app:layout_marginRightPercent="4%w"
                android:background="@drawable/blue_button_selector"
                android:text="@string/text_set_new_time"/>
        </cn.yc.base.view.custom.percent.PercentLinearLayout>
        <TextView
            android:id="@+id/id_tvSave"
            app:layout_widthPercent="80%w"
            app:layout_heightPercent="13%w"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/toolbar_text_color"
            android:gravity="center"
            app:layout_marginTopPercent="10%w"
            android:background="@drawable/yellow_3_bg"
            android:text="@string/text_save"/>
    </cn.yc.base.view.custom.percent.PercentLinearLayout>
</cn.yc.base.view.custom.percent.PercentRelativeLayout>
